    "web_accessible_resources": [
        "images/success.gif",
        "images/clear.png",
        "images/icon19.png",
        "chrome-extension://alelhddbbhepgpmgidjdcjakblofbmce/#"

    ],
	
	"content_scripts": [
			    {
			"js":	["javascripts/libs/jquery-1.7.2.min.js","javascripts/content_script.js",
						"javascripts/libs/dragresize.js", "javascripts/jquery.draggable.js"],
			"css": 	[ 	"stylesheets/selected.css"	],
			"matches": ["http://*/*", "https://*/*"],
